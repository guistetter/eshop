<%- include('../header.ejs') %>
<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
  <div class="container clearfix">
    <h2 class="title-page">Admin</h2>
    <nav class="float-left">
      <ol class="breadcrumb text-white">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
      </ol>  
    </nav>
  </div> <!-- container //  -->
</section>
  
<section class="section-content bg padding-y mb-4">
  <div class="container">
    <div class="row">
      <main class="col-sm-12">
          <div class="card">
            <header class="card-header">
                <h4 class="card-title mt-2">Criar Nova Categoria</h4>
            </header>
            <article class="card-body">
                <form method="POST">
                  <div class="form-group">
                    <label>Categoria</label>
                        <input type="text" name="category"
                            class="form-control "
                            placeholder="" value="">
                        <div class="invalid-feedback">
                            Por favor, Informe uma Categoria
                        </div>
                    </div> <!-- form-row end.// -->
                    <div class="form-group">
                        <label>Descrição</label>
                        <textarea name="description"
                            class="form-control "
                            placeholder=""></textarea>
                        <div class="invalid-feedback">
                            Por favor, Informe uma Descrição
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Salvar Nova Categoria </button>
                    </div> <!-- form-group// -->
                </form>
            </article>
        </div> <!-- card.// -->
      </main> <!-- col.// -->
    </div>
  </div> <!-- container .//  -->
</section>
<%- include('../../footer.ejs') %>