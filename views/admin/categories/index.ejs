<%- include('../header.ejs') %>
<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
  <div class="container clearfix">
    <h2 class="title-page">Admin</h2>
    <nav class="float-left">
      <ol class="breadcrumb text-white">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
      </ol>  
    </nav>
  </div> <!-- container //  -->
</section>
  
<section class="section-content bg padding-y">
  <div class="container">
    <div class="row">
      <main class="col-sm-12">
        <a href="/admin/categorias/nova" class="btn btn-success mb-4"> Criar nova categoria </a>

        <% categories.forEach( category => { %>
        <article class="card card-product">
          <div class="card-body">
            <div class="row">
              <article class="col-sm-8">
                <h4 class="title"> <%- category.category %> </h4>
              </article> <!-- col.// -->
              <aside class="col-sm-4 border-left">
                <p>
                  <a href="/admin/categorias/editar/<%- category.id %>" class="btn btn-primary"> Editar </a>
                  <a href="/admin/categorias/excluir/<%- category.id %>" class="btn btn-danger"> Excluir </a>
                </p>
              </aside> 
            </div> <!-- row.// -->
          </div> <!-- card-body .// -->
        </article> <!-- card product .// -->
        <% }) %>
      </main> <!-- col.// -->
    </div>
  </div> <!-- container .//  -->
</section>
<%- include('../../footer.ejs') %>